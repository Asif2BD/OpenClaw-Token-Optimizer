{
  "description": "Token Optimizer configuration example",
  "notes": "Copy to ~/.openclaw/token-optimizer.json and customize",
  
  "provider": "anthropic",
  
  "available_tiers": ["cheap", "balanced", "smart"],
  "_available_tiers_note": "Set to ['balanced', 'smart'] if Haiku is unavailable",
  
  "budgets": {
    "daily": 100000,
    "monthly": 2000000,
    "alert_threshold": 0.8
  },
  
  "model_overrides": {
    "cheap": null,
    "balanced": null,
    "smart": null
  },
  
  "heartbeat": {
    "interval_minutes": 30,
    "batch_checks": true,
    "model": "anthropic/claude-haiku-4",
    "_model_note": "Use claude-sonnet-4-5 if Haiku unavailable"
  },
  
  "context": {
    "always_load": ["SOUL.md", "IDENTITY.md"],
    "lazy_load": true
  }
}
